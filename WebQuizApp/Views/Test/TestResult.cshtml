@model UserTestResult
@{
    ViewData["Title"] = "Test Result: " + Model.Test.Name;
}

<div class="container py-5">
    <div class="card shadow">
        <div class="card-body text-center">
            <h1 class="display-5 fw-bold mb-4">Test Result: @Model.Test.Name</h1>

            <div class="alert @(Model.Passed ? "alert-success" : "alert-danger") mb-4">
                <h2 class="mb-3">
                    Score: @Model.Score%
                    @if (Model.Passed)
                    {
                        <span class="badge bg-success">Passed</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Failed</span>
                    }
                </h2>
                <p class="mb-0">Attempt Date: @Model.AttemptDate.ToString("f")</p>
            </div>

            <div class="d-flex justify-content-center gap-3">
                <a asp-action="TakeTest" asp-route-id="@Model.TestId" class="btn btn-primary btn-lg">
                    <i class="bi bi-arrow-repeat"></i> Retry Test
                </a>
                <a asp-action="Index" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-list"></i> View All Tests
                </a>
            </div>
        </div>
    </div>

    <!-- Add answer review section if needed -->
</div>