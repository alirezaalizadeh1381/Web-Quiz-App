@model WebQuizApp.Models.TestResultViewModel
@{
    ViewData["Title"] = "Test Result";

    var total = Model.AnswerReviews?.Count ?? 0;
    var correct = Model.AnswerReviews?.Count(a => a.IsCorrect) ?? 0;

    // If Model.Score is already a percentage, keep it; otherwise compute one;
    var percent = total > 0 ? (int)Math.Round((double)correct * 100 / total) : 0;
    var displayPercent = (Model.Score >= 0 && Model.Score <= 100 && total == 0) ? Model.Score : percent;
}
<div class="container py-5">
    <div class="card shadow">
        <div class="card-body">
            <!-- Summary -->
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold mb-4">Test Result: @Model.TestName</h1>

                <div class="alert @(Model.Passed ? "alert-success" : "alert-danger") mb-4">
                    <h2 class="mb-3">
                        Score: @displayPercent%
                        <span class="ms-2 text-muted">
                            @if (total > 0)
                            {
                                @($"({correct} / {total})")
                            }
                        </span>
                        @if (Model.Passed)
                        {
                            <span class="badge bg-success ms-2">Passed</span>
                        }
                        else
                        {
                            <span class="badge bg-danger ms-2">Failed</span>
                        }
                    </h2>

                    <p class="mb-0">
                        Attempt Date:
                        <time id="attemptTime"
                              datetime="@Model.AttemptDate.ToUniversalTime().ToString("o")">
                            @Model.AttemptDate.ToUniversalTime().ToString("u") UTC
                        </time>
                    </p>
                </div>
            </div>

            <!-- Reviews -->
            <div class="mt-5">
                <h3 class="mb-4 border-bottom pb-2">Question Review</h3>

                @if (Model.AnswerReviews == null || !Model.AnswerReviews.Any())
                {
                    <div class="alert alert-info">
                        No answers recorded for this attempt.
                    </div>
                }
                else
                {
                    for (int idx = 0; idx < Model.AnswerReviews.Count; idx++)
                    {
                        var answer = Model.AnswerReviews[idx];
                        <div class="card mb-4 @(answer.IsCorrect ? "border-success" : "border-danger")">
                            <div class="card-header @(answer.IsCorrect ? "bg-success text-white" : "bg-danger text-white")">
                                <h5 class="mb-0 d-flex align-items-center">
                                    @if (answer.IsCorrect)
                                    {
                                        <i class="bi bi-check-circle-fill me-2" aria-hidden="true"></i>
                                        <span class="me-2">Correct</span>
                                        <span class="visually-hidden">Correct</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-x-circle-fill me-2" aria-hidden="true"></i>
                                        <span class="me-2">Incorrect</span>
                                        <span class="visually-hidden">Incorrect</span>
                                    }
                                    <small class="ms-auto">Question @(idx + 1)</small>
                                </h5>
                            </div>

                            <div class="card-body">
                                <!-- Question -->
                                <div class="mb-4">
                                    <h6>Question:</h6>
                                    <p class="fs-5 mb-0">@answer.QuestionContent</p>
                                </div>

                                <!-- Code Snippet -->
                                @if (!string.IsNullOrWhiteSpace(answer.CodeSnippet))
                                {
                                    <div class="mb-4">
                                        <h6>Code Snippet:</h6>
                                        <pre class="bg-dark text-light p-3 rounded" style="white-space:pre-wrap;">
            <code>@answer.CodeSnippet</code>
                                                    </pre>
                                    </div>
                                }

                                <!-- User Answer -->
                                <div class="mb-3">
                                    <h6>Your Answer:</h6>
                                    <div class="alert @(answer.IsCorrect ? "alert-success" : "alert-danger") mb-0" style="white-space:pre-wrap;">
                                        @if (string.IsNullOrWhiteSpace(answer.UserAnswer))
                                        {
                                            <span class="fst-italic">No answer provided</span>
                                        }
                                        else
                                        {
                                            @answer.UserAnswer
                                        }
                                    </div>
                                </div>

                                <!-- Correct Answer -->
                                @if (!answer.IsCorrect && !string.IsNullOrWhiteSpace(answer.CorrectAnswer))
                                {
                                    <div class="mt-3">
                                        <h6>Correct Answer:</h6>
                                        <div class="alert alert-success mb-0" style="white-space:pre-wrap;">
                                            @answer.CorrectAnswer
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
            </div>

            <!-- Actions -->
            <div class="d-flex justify-content-center gap-3 mt-5">
                <a asp-action="TakeTest" asp-route-id="@Model.TestId" class="btn btn-primary btn-lg">
                    <i class="bi bi-arrow-repeat" aria-hidden="true"></i>
                    <span class="ms-1">Retry Test</span>
                </a>
                <a asp-action="Index" asp-controller="Tests" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-list" aria-hidden="true"></i>
                    <span class="ms-1">View All Tests</span>
                </a>
                <button type="button" class="btn btn-outline-secondary btn-lg" onclick="window.print()">
                    <i class="bi bi-printer" aria-hidden="true"></i>
                    <span class="ms-1">Print</span>
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Localize attempt time on the client
        (function () {
            const el = document.getElementById('attemptTime');
            if (!el) return;
            const iso = el.getAttribute('datetime');
            if (!iso) return;
            const d = new Date(iso);
            if (isNaN(d)) return;
            el.textContent = d.toLocaleString(undefined, {
                year: 'numeric', month: 'short', day: 'numeric',
                hour: '2-digit', minute: '2-digit'
            });
        })();
    </script>
}
