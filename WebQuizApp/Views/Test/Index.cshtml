@model List<WebQuizApp.ViewModels.TestWithStatusViewModel>
@using System.Security.Claims
@using WebQuizApp.Controllers
@{
    ViewData["Title"] = "Available Tests";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="display-5 fw-bold">Available Tests</h1>

        @if (User.Identity?.IsAuthenticated == true)
        {
            <a asp-controller="Profile" asp-action="Index" class="btn btn-outline-primary">
                <i class="bi bi-person-circle"></i> My Profile
            </a>
        }
    </div>

    @if (User.Identity?.IsAuthenticated != true)
    {
        <div class="alert alert-info d-flex align-items-center" role="alert">
            <i class="bi bi-info-circle-fill me-2"></i>
            <div>
                Please <a asp-area="Identity" asp-page="/Account/Login" class="alert-link">login</a>
                or <a asp-area="Identity" asp-page="/Account/Register" class="alert-link">register</a>
                to take tests and track your progress.
            </div>
        </div>
    }

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@item.Test.Name</h5>
                        <p class="card-text text-muted">@item.Test.Description</p>

                        <!-- Status indicator -->
                        @if (item.Passed.HasValue)
                        {
                            <div class="d-flex align-items-center mb-3">
                                @if (item.Passed.Value)
                                {
                                    <span class="badge bg-success me-2">
                                        <i class="bi bi-check-circle"></i> Passed
                                    </span>
                                    <span class="text-success fw-bold">@item.Score%</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger me-2">
                                        <i class="bi bi-x-circle"></i> Failed
                                    </span>
                                    <span class="text-danger fw-bold">@item.Score%</span>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="bi bi-question-circle"></i> Not Attempted
                            </span>
                        }
                    </div>
                    <div class="card-footer bg-white border-0">
                        <a asp-action="TakeTest" asp-route-id="@item.Test.Id"
                           class="btn btn-outline-primary w-100">
                            @(item.Passed.HasValue ? "Retake Test" : "Take Test")
                        </a>
                    </div>
                </div>
            </div>
        }
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-collection text-muted" style="font-size: 5rem;"></i>
            <h3 class="mt-3">No Tests Available</h3>
            <p class="text-muted">Check back later for new challenges</p>

            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="Admin" asp-action="CreateTest" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Create New Test
                </a>
            }
        </div>
    }
</div>

@section Styles {
    <style>
        .test-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .test-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }

        .card-header {
            border-radius: 0.375rem 0.375rem 0 0 !important;
        }
    </style>
}