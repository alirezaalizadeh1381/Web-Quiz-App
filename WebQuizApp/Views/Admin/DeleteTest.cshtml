@model Test
@{
    ViewData["Title"] = "Delete Test";
}

<div class="container mt-4">
    <h1 class="mb-4">Delete Test</h1>

    <div class="alert alert-danger" role="alert">
        <h4><i class="bi bi-exclamation-triangle"></i> Warning: This action cannot be undone!</h4>
        <p>Deleting this test will also delete all associated questions and test results.</p>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <h3>Test Details</h3>
            <dl class="row mt-3">
                <dt class="col-sm-3">Test Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Passing Score</dt>
                <dd class="col-sm-9">@Model.PassingScore%</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@(Model.IsActive ? "Active" : "Inactive")</dd>

                <dt class="col-sm-3">Questions</dt>
                <dd class="col-sm-9">@(Model.Questions?.Count ?? 0) questions</dd>
            </dl>

            <form  method="post" asp-action="DeleteTestConfirmed" asp-route-id="@Model.Id" class="mt-4">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Tests" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>