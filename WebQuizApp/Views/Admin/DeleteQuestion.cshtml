@model Question
@{
    ViewData["Title"] = "Delete Question";
}

<div class="container mt-4">
    <h1 class="mb-4">Delete Question</h1>

    <div class="alert alert-warning" role="alert">
        <h4><i class="bi bi-exclamation-circle"></i> Confirm Deletion</h4>
        <p>Are you sure you want to delete this question? This action cannot be undone.</p>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <h3>Question Details</h3>

            <div class="mt-3">
                <h5>Question:</h5>
                <p>@Model.Content</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.CodeSnippet))
            {
                <div class="mt-3">
                    <h5>Code Snippet:</h5>
                    <pre class="bg-light p-3 rounded">@Model.CodeSnippet</pre>
                </div>
            }

            <div class="mt-3">
                <h5>Correct Answer:</h5>
                <p>@Model.CorrectAnswer</p>
            </div>

            <!-- Views/Admin/DeleteQuestion.cshtml -->
            <form method="post" asp-action="DeleteQuestionConfirmed" asp-route-id="@Model.Id">
                @Html.AntiForgeryToken()
                <div class="d-flex justify-content-between">
                    <a asp-action="Questions" asp-route-testId="@Model.TestId" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Question
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>