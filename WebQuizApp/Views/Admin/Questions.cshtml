@model IEnumerable<Question>
@{
    ViewData["Title"] = $"Questions for {ViewBag.Test.Name}";
    var testId = ViewBag.Test.Id;
}

<h1>@ViewData["Title"]</h1>
<p>@ViewBag.Test.Description</p>

<p>
    <a asp-action="CreateQuestion" asp-route-testId="@testId" class="btn btn-primary">Add New Question</a>
    <a asp-action="Tests" class="btn btn-outline-secondary">Back to Tests</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Content</th>
            <th>Code Snippet</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Content</td>
                <td><pre>@item.CodeSnippet</pre></td>
                <td>
                    <a asp-action="EditQuestion" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="DeleteQuestion" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>